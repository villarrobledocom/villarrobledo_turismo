<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0" id="com.villarrobledo.turismo" version="1.0.0">

	<name>Villarrobledo Turismo</name>
	<description>Información turística de Villarrobledo</description>
	<author href="http://www.villarrobledo.com" email="villarrobledo.com@gmail.com">Juan Carlos Santos Ballesteros</author>

	<!-- Preferences -->
	<preference name="permissions" value="none" />
	<preference name="orientation" value="portrait" />
  <preference name="target-device" value="universal" />
	<preference name="webviewbounce" value="true" />
	<preference name="prerendered-icon" value="true" />
	<preference name="stay-in-webview" value="false" />
	<preference name="ios-statusbarstyle" value="black-opaque" />
	<preference name="detect-data-types" value="true" />
	<preference name="exit-on-suspend" value="false" />
	<preference name="show-splash-screen-spinner" value="true" />
	<preference name="auto-hide-splash-screen" value="true" />
	<preference name="android-installLocation" value="auto" />
	<preference name="phonegap-version" value="3.7.0" />

	<!-- Plugins -->
	<!-- Core plugins -->
	<plugin name="org.apache.cordova.battery-status" spec="0.2.12" source="pgb" />
	<plugin name="org.apache.cordova.camera" spec="0.3.6" source="pgb" />
	<plugin name="org.apache.cordova.media-capture" spec="0.3.6" source="pgb" />
	<plugin name="org.apache.cordova.console" spec="0.2.13" source="pgb" />
	<plugin name="org.apache.cordova.contacts" spec="0.2.16" source="pgb" />
	<plugin name="org.apache.cordova.device" spec="0.3.0" source="pgb" />
	<plugin name="org.apache.cordova.device-motion" spec="0.2.11" source="pgb" />
	<plugin name="org.apache.cordova.device-orientation" spec="0.3.11" source="pgb" />
	<plugin name="org.apache.cordova.file" spec="1.3.3" source="pgb" />
	<plugin name="org.apache.cordova.file-transfer" spec="0.5.0" source="pgb" />
	<plugin name="org.apache.cordova.geolocation" spec="0.3.12" source="pgb" />
	<plugin name="org.apache.cordova.globalization" spec="0.3.4" source="pgb" />
	<plugin name="org.apache.cordova.inappbrowser" spec="0.6.0" source="pgb" />
	<plugin name="org.apache.cordova.media" spec="0.2.16" source="pgb" />
	<plugin name="org.apache.cordova.network-information" spec="0.2.15" source="pgb" />
	<plugin name="org.apache.cordova.dialogs" spec="0.3.0" source="pgb" />
	<plugin name="org.apache.cordova.splashscreen" spec="1.0.0" source="pgb" />
	<plugin name="org.apache.cordova.vibration" spec="0.3.13" source="pgb" />
	<!-- Third party plugins -->
	<plugin name="com.phonegap.plugins.pushplugin" spec="2.5.0" source="pgb" />

	<!-- Icons and splash screens -->
	<icon src="res/icon.png" />
	<platform name="android">
		<icon src="res/android/icon-ldpi.png" density="ldpi" />
		<icon src="res/android/icon-mdpi.png" density="mdpi" />
		<icon src="res/android/icon-hdpi.png" density="hdpi" />
		<icon src="res/android/icon-xhdpi.png" density="xhdpi" />
		<splash src="res/android/splash-port-hdpi.png" density="port-hdpi"/>
		<splash src="res/android/splash-port-ldpi.png" density="port-ldpi"/>
		<splash src="res/android/splash-port-mdpi.png" density="port-mdpi"/>
		<splash src="res/android/splash-port-xhdpi.png" density="port-xhdpi"/>
	</platform>

	<!-- Access -->
	<access origin="*" />

</widget>
